{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "#core/*": ["src/core/*"],
      "#modules/*": ["src/modules/*"],
      "#constants/*": ["src/common/constants/*"],
      "#errors/*": ["src/common/errors/*"],
      "#helpers/*": ["src/common/helpers/*"],
      "#aws/*": ["src/core/aws/*"],
      "#middlewares/*": ["src/core/middlewares/*"],
      "#utils/*": ["src/core/utils/*"],
      "#sse/*": ["src/core/sse/*"],
      "#sanitize/*": ["src/core/sanitize/*"],
      "#crons/*": ["src/crons/*"]
    },
    "typeRoots": ["./src/common/types", "./node_modules/@types"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
